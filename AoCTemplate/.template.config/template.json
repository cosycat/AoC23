{
  "author": "Flavia Brogle",
  "name": "AoCDailyPuzzle",
  "description": "A project for creating a command-line application that can be used to solve Advent of Code puzzles in C#.",
  "identity": "FlaviaBrogle.AoCDailyPuzzle",
  "shortName": "AoC",
  "sourceName": "AoCTemplate",
  "preferNameDirectory": true,
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "symbols": {
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project.",
      "defaultValue": "net7.0",
      "datatype": "string"
    },
    "UseToday": {
      "type": "computed",
      "value": false
    },
    "CurrentDay": {
      "isEnabled": "false",
      "type": "generated",
      "generator": "now",
      "parameters": {
        "format": "dd"
      },
      "datatype": "string",
      "replaces": "xx",
      "fileRename": "xx"
    },
    "Day": {
      "type": "parameter",
      "description": "The day of the puzzle.",
      "datatype": "string",
      "replaces": "xx",
      "fileRename": "xx",
      "isRequired": true
    },
    "Year": {
      "type": "parameter",
      "description": "The year of the puzzle. If not specified, the year 2023 will be used.",
      "datatype": "string",
      "replaces": "CurrYear",
      "fileRename": "CurrYear",
      "defaultValue": "2023"
    },
      
    "ResultType": {
      "type": "parameter",
      "description": "The type of the expected result.",
      "defaultValue": "int",
      "replaces": "/*resultType*/int",
      "datatype": "string"
    },
    "InputReadMethod": {
      "type": "parameter",
      "description": "How the input should be read.",
      "datatype": "choice",
      "choices": [
        {
          "choice": "LineByLineArray",
          "description": "Reads the input line by line and stores it in a string array."
        },
        {
          "choice": "LineByLineList",
          "description": "Reads the input line by line and stores it in a string list."
        }
      ],
      "defaultValue": "LineByLineArray",
      "replaces": "InputReadMethod"
    },
    "LineByLineArray": {
      "type": "computed",
      "value": "(InputReadMethod == \"LineByLineArray\")"
    },
    "LineByLineList": {
      "type": "computed",
      "value": "(InputReadMethod == \"LineByLineList\")"
    }
  }
}